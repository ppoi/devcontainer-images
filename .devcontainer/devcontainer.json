{
    "name": "devcontainer-images",
    "image": "ghcr.io/ppoi/devenv-type-alpha:20240519-01",
    "mounts": [
        {"source": "/run/podman/podman.sock", "target": "/var/run/docker.sock", "type": "bind"}
    ],
    "capAdd": ["AUDIT_WRITE"],
    "postCreateCommand": {
        "dood": "sudo chgrp docker /var/run/docker.sock",
        "devcontainer-cli": "sudo npm i -g @devcontainers/cli"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "github.vscode-github-actions",
                "ms-azuretools.vscode-docker",
                "redhat.vscode-yaml"
            ]
        }
    }
}